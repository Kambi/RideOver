<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="385dp"
    android:layout_height="638dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    tools:context="com.example.rahultheboss.rideover.GetARide">

    <EditText
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:id="@+id/gr_leaving_from_text_field"
        android:textAlignment="center"
        android:hint="Leaving From"
        android:inputType="text"
        android:background="@drawable/leaving_from_text_field"
        android:layout_marginTop="111dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:id="@+id/gr_going_to_text_field"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/going_to_text_field"
        android:hint="Going To"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/gr_leaving_from_text_field"
        android:layout_alignLeft="@+id/gr_leaving_from_text_field"
        android:layout_alignStart="@+id/gr_leaving_from_text_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:background="@drawable/calender_text_field_2"
        android:ems="10"
        android:id="@+id/gr_date_text_field"

        android:hint="Leaving Date"
        android:layout_alignTop="@+id/calender_button"
        android:layout_alignRight="@+id/gr_going_to_text_field"
        android:layout_alignEnd="@+id/gr_going_to_text_field"
        android:layout_toRightOf="@+id/calender_button"
        android:layout_toEndOf="@+id/calender_button" />

    <Button
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:background="@drawable/calender_button"
        android:id="@+id/calender_button"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/gr_going_to_text_field"
        android:layout_alignLeft="@+id/gr_going_to_text_field"
        android:layout_alignStart="@+id/gr_going_to_text_field" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="15dp"
        android:text="CLICK ME ^"
        android:textSize="9dp"
        android:textColor="#ffffff"
        android:id="@+id/textView3"
        android:background="#43a3b3"
        android:layout_below="@+id/calender_button"
        android:layout_alignLeft="@+id/calender_button"
        android:layout_alignStart="@+id/calender_button"
        android:layout_alignBottom="@+id/gr_date_text_field"
        android:layout_toStartOf="@+id/gr_date_text_field"
        android:layout_alignRight="@+id/calender_button"
        android:layout_alignEnd="@+id/calender_button" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/find_rides_button"
        android:id="@+id/find_rides_confirm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/all_rides_confirm"
        android:background="@drawable/all_rides_button"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/find_rides_confirm"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>