<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="385dp"
    android:layout_height="640dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    android:background="@drawable/background"
    tools:context="com.example.rahultheboss.rideover.LoginActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_2"
        android:id="@+id/login_button"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/password_text_field"
        android:layout_centerHorizontal="true" />

    <EditText
    android:layout_width="320dp"
    android:layout_height="40dp"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/username_text_field"
    android:layout_gravity="center_horizontal"
    android:hint="Username"
    android:background="@drawable/username_field"
    android:textAlignment="center"
        android:layout_marginTop="251dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:textAlignment="center"
        android:hint="Password"
        android:background="@drawable/password_field"
        android:id="@+id/password_text_field"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/username_text_field"
        android:layout_alignRight="@+id/username_text_field"
        android:layout_alignEnd="@+id/username_text_field" />





    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:background="@drawable/rideover_logo_transparent_3"
        android:layout_marginBottom="79dp"
        android:layout_alignBottom="@+id/username_text_field"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>