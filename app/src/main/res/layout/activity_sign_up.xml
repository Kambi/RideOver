<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="385dp"
    android:layout_height="730dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.example.rahultheboss.rideover.SignUpActivity"
    android:background="@drawable/background"
    android:weightSum="1">

    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name_text_field"
        android:layout_gravity="center_horizontal"
        android:hint="Name "
        android:background="@drawable/name_field"
        android:textAlignment="center"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username_text_field"
        android:layout_gravity="center_horizontal"
        android:hint="Username"
        android:background="@drawable/username_field"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/name_text_field"
        android:layout_alignLeft="@+id/name_text_field"
        android:layout_alignStart="@+id/name_text_field" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_text_field"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:background="@drawable/email_address_field"
        android:textAlignment="center"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/username_text_field"
        android:layout_alignLeft="@+id/name_text_field"
        android:layout_alignStart="@+id/name_text_field" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:inputType="phone"
        android:background="@drawable/phone_number_field"
        android:ems="10"
        android:id="@+id/phone_number_text_field"
        android:layout_gravity="center_horizontal"
        android:hint="Phone Number"
        android:textAlignment="center"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/email_text_field"
        android:layout_alignLeft="@+id/email_text_field"
        android:layout_alignStart="@+id/email_text_field" />
    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:background="@drawable/password_field"
        android:ems="10"
        android:id="@+id/password_text_field"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/phone_number_text_field"
        android:layout_alignLeft="@+id/phone_number_text_field"
        android:layout_alignStart="@+id/phone_number_text_field" />


    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text=""
        android:background="@drawable/signup_button"
        android:id="@+id/register_button"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/password_text_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/rideover_logo_transparent_3"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>